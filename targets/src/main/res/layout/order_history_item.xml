<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    android:id="@+id/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardBackgroundColor="#ffffff"
    card:cardCornerRadius="1dp"
    card:cardElevation="0.5dp"
    card:cardMaxElevation="@dimen/cardview_default_elevation"
    card:cardPreventCornerOverlap="true"
    card:cardUseCompatPadding="true"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.AppCompat.Button.Borderless">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_order_number"
                android:text="订单号：1234567"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-3-15"
                android:id="@+id/tv_order_time"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bright_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="6dp">

            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="80dp"
                android:layout_height="80dp"
                tools:background="@color/color_item_press"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/iv_product"
                android:orientation="vertical"
                android:paddingTop="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_description"
                    tools:text="正宗烟台苹果水果新鲜山东栖霞红富士苹果净重5斤包邮"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量：1"
                    android:id="@+id/tv_quantity"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingBottom="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                tools:text="总价：￥16.00"
                android:layout_centerVertical="true"
                android:id="@+id/tv_price"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认收货"
                android:id="@+id/tv_receive_success"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="4dp"
                android:gravity="center"
                android:background="@drawable/default_address"
                android:layout_marginRight="12dp"
                android:layout_alignTop="@+id/tv_price"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即评价"
                android:id="@+id/tv_received"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="4dp"
                android:gravity="center"
                android:background="@drawable/default_address"
                android:layout_marginRight="12dp"
                android:layout_alignTop="@+id/tv_price"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已评价"
                android:id="@+id/tv_comment"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="4dp"
                android:gravity="center"
                android:background="@drawable/default_address"
                android:layout_marginRight="12dp"
                android:layout_alignTop="@+id/tv_price"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

