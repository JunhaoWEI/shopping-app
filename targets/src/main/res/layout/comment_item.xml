<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/black"
        android:id="@+id/tv_customer_head"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_customer_name"
        android:text="contenue"
        android:layout_toRightOf="@+id/tv_customer_head"/>
    <com.hedgehog.ratingbar.RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_customer_head"
        android:layout_below="@+id/tv_customer_name"
        android:id="@+id/customer_rate"
        hedgehog:clickable="false"
        hedgehog:starCount="5"
        hedgehog:starEmpty="@mipmap/ic_star_empty"
        hedgehog:starFill="@mipmap/ic_star_fill"
        hedgehog:starImageSize="16dp"></com.hedgehog.ratingbar.RatingBar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_comment_title"
        android:layout_toRightOf="@+id/tv_customer_head"
        android:layout_below="@+id/customer_rate"
        android:text="pet bed"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/customer_rate"
        android:layout_below="@+id/tv_comment_title"
        android:text=""/>

</RelativeLayout>